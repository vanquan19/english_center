<div class="h-14 mb-4">
    <nav class="bg-gray-50 sm:pl-72 pl-16 dark:bg-gray-900 shadow-md z-20 py-4 fixed w-full left-0 top-0 flex px-4">
        <h1 class="p-1 font-bold text-gray-700 uppercase"><%= title ? title : '' %></h1>
        <div class="max-w-screen-xl flex flex-wrap items-center justify-between ml-auto">
            <div class="flex relative items-center md:order-2 space-x-3 md:space-x-0 rtl:space-x-reverse ml-auto">
                <button
                    type="button"
                    class="flex text-sm bg-gray-800 rounded-full md:me-0 focus:ring-4 focus:ring-gray-300 dark:focus:ring-gray-600 hover:"
                    id="user-menu-button"
                    onclick="handleOpen('user-dropdown', 'animate-facein', 'animate-hiddenout', 300)">
                    <span class="sr-only">Open user menu</span>
                    <img class="w-8 h-8 rounded-full" src="/images/default-avatar.webp" alt="user photo" />
                </button>
                <!-- Dropdown menu -->
                <div
                    class="z-50 hidden absolute top-full right-0 my-4 text-base list-none bg-white divide-y divide-gray-100 rounded-lg shadow dark:bg-gray-700 dark:divide-gray-600"
                    id="user-dropdown"
                    data-open="false">
                    <div class="px-4 py-3" onclick="window.location.href = '/personal-information?id=<%= auth.id%>'">
                        <span class="block text-sm text-gray-900 dark:text-white"><%= auth.firstname + " " + auth.lastname %></span>
                        <span class="block text-sm text-gray-500 truncate dark:text-gray-400"><%= auth.email %></span>
                    </div>
                    <ul class="py-2" aria-labelledby="user-menu-button">
                        <li>
                            <a href="#" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 dark:hover:bg-gray-600 dark:text-gray-200 dark:hover:text-white">Cài Đặt</a>
                        </li>
                        <li>
                            <a href="/logout" class="block px-4 py-2 text-sm text-red-500 hover:bg-gray-100 dark:hover:bg-gray-600 dark:text-gray-200 dark:hover:text-white">Đăng xuất</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </nav>
</div>
